{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://weave-md.org/schema/weave-ast.schema.json",
  "title": "Weave Document AST",
  "description": "Canonical AST representation for Weave Markdown conformance",
  "type": "object",
  "properties": {
    "sections": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Section"
      }
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Link"
      }
    }
  },
  "required": ["sections", "links"],
  "definitions": {
    "Section": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string"
        },
        "peek": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "filePath": {
          "type": "string"
        },
        "extendedBlocks": {
          "type": "array",
          "items": {
            "$ref": "https://weave-md.org/schema/weave-format.schema.json#/definitions/ExtendedBlock"
          }
        },
        "position": {
          "$ref": "#/definitions/SourcePosition",
          "description": "Start position of the section in source"
        }
      },
      "required": ["id", "body"]
    },
    "SourcePosition": {
      "type": "object",
      "properties": {
        "line": {
          "type": "integer",
          "minimum": 0
        },
        "character": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["line", "character"]
    },
    "Link": {
      "type": "object",
      "description": "A node link occurrence with start and end positions.",
      "properties": {
        "ref": {
          "$ref": "#/definitions/NodeRef"
        },
        "start": {
          "$ref": "#/definitions/SourcePosition",
          "description": "Start position of the link in source"
        },
        "end": {
          "$ref": "#/definitions/SourcePosition",
          "description": "End position of the link in source"
        },
        "text": {
          "type": "string",
          "description": "The link text, if any"
        },
        "sourceId": {
          "type": "string",
          "description": "ID of the section containing this link"
        }
      },
      "required": ["ref", "sourceId", "start", "end"]
    },
    "NodeRef": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "display": {
          "type": "string",
          "enum": ["footnote", "sidenote", "margin", "overlay", "inline", "stretch", "page"]
        },
        "export": {
          "type": "string",
          "enum": ["appendix", "inline", "omit"]
        },
        "params": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["id"]
    }
  }
}
