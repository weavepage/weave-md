{
  "name": "@weave-md/core",
  "version": "0.1.0-alpha.0",
  "description": "Weave Markdown language contract - spec, schemas, types, and pure helpers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "spec",
    "schema"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./extended": {
      "types": "./dist/types/extended.d.ts",
      "import": "./dist/types/extended.js"
    },
    "./schema/*": "./schema/*"
  },
  "scripts": {
    "build": "tsc"
  },
  "keywords": [
    "weave",
    "markdown",
    "spec",
    "schema"
  ],
  "author": "weavepage",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/weavepage/weave-md.git",
    "directory": "packages/core"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.7.0"
  }
}
