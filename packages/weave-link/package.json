{
  "name": "@weave-md/weave-link",
  "version": "0.1.0",
  "description": "Lightweight utilities for rendering Weave node links in chat interfaces",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./markdown-it": {
      "types": "./dist/markdown-it/index.d.ts",
      "import": "./dist/markdown-it/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./styles.css": "./src/styles.css"
  },
  "files": [
    "dist",
    "src/styles.css"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "demo": "vite --config demo/vite.config.ts demo"
  },
  "peerDependencies": {
    "markdown-it": "^14.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "markdown-it": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.0.0",
    "markdown-it": "^14.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "keywords": [
    "weave-md",
    "weave",
    "markdown",
    "node-links",
    "chat",
    "llm"
  ],
  "license": "MIT"
}
